<pre>
  <%= JSON.stringify(event, null, 2) %>
</pre>

<% 
  const path = event?._id ? `/events/${event._id}?_method=PUT` : '/events'
%>

<form action="<%- path %>" method="POST">
  <% if (event?._id) { %>
  <div>Id: <%- event._id %> </div>
  <br />
  <% } %>
  <label for="name">Name:</label>
  <input type="text" name="name" value="<%- event?.name %>" />
  <br />
  <label for="date">Date (YYYY-MM-DD):</label>
  <input type="text" name="date" value="<%- event?.date %>" />
  <br />
  <label for="created_by">Created By (unknown):</label>
  <input type="text" name="created_by" value="<%- event?.createdBy || 'unknown' %>" />
  <br />
  <label for="updated_by">Created By (unknown):</label>
  <input type="text" name="updated_by" value="<%- event?.updatedBy || 'unknown' %>" />
  <br />
  <input type="submit">
</form>